{% extends "base.twig" %}

{% block content %}
    <article id="page-{{ post.ID }}">
        <div class="container">
            <div class="post-content">
                <div class="row">
                    <div class="col-lg-9">
                        <article class="post-details">
                            {{ post.content|raw }}
                        </article>
                        <div id="main-form" >
        <div class="field-row two-in-row">
            <div class="field-wrap radio-box">
                <label>Je suis adhérent-e*</label>
                <div class="radio-wrap">
                    <input type="radio" name="is_adherent" value="1" id="adherent-oui"/>
                    <label for="adherent-oui">Oui</label>
                </div>
                <div class="radio-wrap">
                    <input type="radio" name="is_adherent" value="0" id="adherent-non" checked/>
                    <label for="adherent-non">Non</label>
                </div>
            </div>
            <div class="field-wrap" id="numadherent-part" style="display:none ">
                <label for="numadherent">N° adhérent (facultatif)</label>
                <input type="text" name="numadherent" id="numadherent" value="" data-hj-masked/>
            </div>
        </div>

        <div class="field-row two-in-row">
            <div class="field-wrap">
                <label for="00N7E000000nl0L">Prénom*</label>
                <input type="text" value="" name="00N7E000000nl0L" id="00N7E000000nl0L" data-msg="Veuillez indiquer votre prénom" data-rule-required="true" data-en="first_name"  data-hj-masked/>
            </div>

            <div class="field-wrap">
                <label for="00N7E000000nl0Q">Nom*</label>
                <input type="text" value="" name="00N7E000000nl0Q" id="00N7E000000nl0Q" data-msg="Veuillez indiquer votre nom" data-rule-required="true" data-en="last_name"  data-hj-masked/>
            </div>
        </div>

        <div class="field-row two-in-row">
            <div class="field-wrap">
                <label for="email">Email*</label>
                <input type="email" data-rule-required="true" value="" id="email" name="email" data-rule-email="true" data-msg-email="Merci de rentrer une adresse e-mail valide" data-en="email"  data-hj-masked/>
            </div>

            <div class="field-wrap">
                <label for="phone">Téléphone</label>
                <input type="text" value="" name="phone" id="phone" data-rule-phone="true" data-msg-phone="Merci d'indiquer un numéro de téléphone valide, en France" data-en="phone_number" data-mask="F000000000" data-mask-translation="phone"  data-hj-masked/>
            </div>
        </div>
    </div>


    <div class="field-wrap">
        <label for="selection">Objet de votre message</label>
        <select name="selection" id="selection" style="width: 100%">
            <option value="">Je souhaite...</option>
            <optgroup label="Gérer mon adhésion" data-type="Admin">
                <option value="Changement de coordonnées personnelles" data-action="show-coords" >Modifier mes coordonnées</option>
                <option value="Changement de coordonnées bancaires" data-action="show-iban">Modifier mes coordonnées bancaires</option>
                <option value="Reçu fiscal" data-action="show-fiscal">Obtenir un reçu fiscal</option>
                <option value="" data-action="show-autre">Autre chose concernant mon adhésion</option>
            </optgroup>

            <optgroup label="En savoir plus sur le fonctionnement de Greenpeace">
                <option value="Devenir bénévole pour Greenpeace" data-action="show-benevolat">Devenir bénévole pour Greenpeace</option>
                <option value="Travailler chez Greenpeace" data-action="show-travail">Travailler chez Greenpeace</option>
                <option value="Faire un stage chez Greenpeace" data-action="show-stage">Faire un stage chez Greenpeace</option>
            </optgroup>

            <optgroup label="Poser une question sur les campagnes de Greenpeace" data-type="Réactions Campagnes">
                <option value="Agriculture / OGM" data-action="show-campagne" >Agriculture / Élevage</option>
                <option value="Climat" data-action="show-campagne" >Climat / Energie / Nucléaire</option>
                <option value="Forêt" data-action="show-campagne" >Forêts</option>
                <option value="Océan" data-action="show-campagne" >Océans</option>
                <option value="Toxique" data-action="show-campagne" >Toxiques</option>
                <option value="HS Autre" data-action="show-campagne" >Hors sujet</option>
            </optgroup>

            <optgroup label="Poser une autre question sur Greenpeace" data-type="Fonctionnement">
                <option value="Poser une question pour mes études" data-reason="Projet Etudiant" data-action="show-etudes">Poser une question pour mes études</option>
                <option value="" data-action="show-greenpeace">Poser une question sur Greenpeace</option>
                <option value="La boutique en ligne" data-action="show-shop">La boutique en ligne</option>
                <option value="Poser une question aux Relations Presse" data-action="show-presse">Poser une question aux Relations Presse</option>

            </optgroup>


            <optgroup label="Partager des informations d'utilité publique">
                <option value="" data-action="show-leaks">Nous envoyer des documents de manière sécurisée et anonyme</option>
            </optgroup>
        </select>
    </div>



    <div id="campagne-part"  class="form-part hidden" >
        <div class="important">
            <p>
                Notre site Internet est plein de ressources. Pensez à vérifier si la réponse à votre question ne s’y trouve pas ! ;-)
            </p>

            <p>
                <a href="/?s=" class="btn secondary-btn icon-search pull-right open-search-form">Rechercher dans le site</a>
            </p>
        </div>

        <div class="field-wrap">
            <label for="message">
                Posez-nous votre question ici :
            </label>
        </div>

    </div>

    <div id="travail-part"  class="form-part hidden" >
        <div class="important">
            <p>
                Travailler chez Greenpeace, c’est concilier professionnalisme et engagement, c’est participer au rayonnement de Greenpeace et développer ses acquis personnels. Venez faire la différence à nos côtés !
            </p>


            <p>
                Vous souhaitez mettre votre énergie au service des causes que nous défendons&nbsp;? Vous avez l’esprit d’équipe et le sens du contact&nbsp;? <strong class="mark">Rejoignez un programme innovant</strong> et participez à la défense de notre indépendance financière.
            </p>

            <p>
                <a href="/jobs/recruteur-adherents/" class="more-link icon-right pull-right">Devenir Recruteur d’adhérents !</a>
            </p>

            <div class="sep" ></div>

            <p>
                Les compétences les plus diversifiées sont recherchées pour atteindre nos objectifs. En créant votre Espace Candidat, vous pourrez <strong class="mark">répondre à une annonce</strong>, nous remettre une <strong class="mark">candidature spontanée</strong> et mettre en place des alertes sur nos futures offres. Faites-nous part de votre motivation&nbsp;!
            </p>
            <p>
                <a href="/offres-d-emploi" class="more-link icon-right pull-right">Découvrir toutes nos offres</a>
            </p>

            <div class="sep" ></div>

            <p>
                Vous avez déjà postulé ? Suivez l’évolution de votre candidature sur votre Espace Candidat.
            </p>

            <p>
                <a href="https://greenpeace.mycv.tech/" class="more-link icon-right pull-right">Mon Espace candidat</a>
            </p>


            <div class="sep" ></div>

            <p>
                Vous désirez naviguer sur l’Esperanza, l’Arctic Sunrise ou le Rainbow Warrior&nbsp;? Vous voulez mettre vos compétences au service d’un bureau de Greenpeace à l’étranger&nbsp;?
            </p>



            <div class="field-row two-in-row">
                <div class="field-wrap">
                    <a href="/travailler-bateau-de-greenpeace" class="more-link icon-right">Travailler sur nos navires</a>
                </div>

                <div class="field-wrap">
                    <a href="/postes-a-letranger" class="more-link icon-right pull-right">Travailler à l’international</a>
                </div>
            </div>

        </div>
    </div>



    <div id="fiscal-part" class="form-part hidden">
        <div class="important">
            <p>
                Si vous nous soutenez par prélèvement automatique, les reçus fiscaux sont automatiquement envoyés au printemps, juste avant la déclaration d’impôts.
            </p>
            <p>
                Vous nous avez fait un don ponctuel&nbsp;? Vous recevrez votre reçu fiscal sous six semaines après réception de votre don.
            </p>

        </div>

        <div class="field-wrap">
            <label for="message">
                Vous avez besoin du <b>duplicata</b> d’un de vos reçus fiscaux&nbsp;?
                <br/><br/>
                Dites-le nous ici :
            </label>
        </div>

    </div>


    <div id="fiscal2-part" class="form-part hidden">
        <div class="field-wrap" >
            <p style="font-size: 12px;">
                Greenpeace est une association reconnue d'intérêt général. Ainsi, vous pouvez déduire 66% du total de vos dons de votre impôt sur le revenu. Grâce à vos dons nous sommes à 100% efficaces sur le terrain&nbsp;!
            </p>
        </div>
    </div>


    <div id="etudes-part" class="form-part hidden">
        <div class="important">
            <p>
                Vous traitez de l’environnement dans le cadre de vos études, bravo&nbsp;!
                Malheureusement, nos chargés de campagnes sont très occupés, et ne pourront pas vous apporter d’autres renseignements que ceux présents sur notre site. Avec plusieurs milliers de pages sur greenpeace.fr, vous allez sûrement trouver ce que vous cherchez !
            </p>

            <p>
                <span class="btn secondary-btn icon-search open-search-form pull-right">Trouver la réponse à ma question</span>
            </p>
        </div>
    </div>


    <div id="presse-part" class="form-part hidden">
        <div class="important">
            <p>
                Vous êtes journaliste ? Nos chargés de communication sont à votre écoute.
            </p>
            <p>
                <a href="/espace-presse" class="more-link icon-right pull-right">Retrouvez notre équipe</a>
            </p>
        </div>
    </div>



    <div id="leaks-part" class="form-part hidden">
        <div class="important">
            <p>
                Vous avez en votre possession des documents d'utilité publique&nbsp;? Vous souhaitez lancer une alerte&nbsp;? Nous avons mis en place une plateforme en ligne vous permettant de nous envoyer des documents de manière anonyme et sécurisée.
            </p>

            <p>
                Avant de continuer, nous vous invitons fortement à vous connecter depuis un ordinateur de confiance (chez vous ou depuis un cybercafé). Pour votre protection, nous vous recommandons également de <a href="https://tor.eff.org/download/download-easy.html.en" target="_blank" >télécharger Tor</a> et de vous connecter sur <a href="http://isj37ite2gkabzeth6oxosh7zehpqnf5aedp3j2ccp2ewxglmr6bwrad.onion/">http://isj37ite2gkabzeth6oxosh7zehpqnf5aedp3j2ccp2ewxglmr6bwrad.onion/</a>.

            </p>
            <p>
                <a href="/greenleaks" class="more-link icon-right pull-right" target="_blank" >Vous rendre sur notre plateforme sécurisée</a>
            </p>
        </div>
    </div>





    <div id="greenpeace-part" class="form-part hidden">
        <div class="important">
            <p>
                Pour tout savoir sur Greenpeace, notre fonctionnement comme nos missions, consultez nos pages <a href="/connaitre-greenpeace/" target="_blank" >A propos de Greenpeace</a>.
            </p>


            <div class="field-row two-in-row">
                <div class="field-wrap">
                    <a href="/connaitre-greenpeace" class="more-link icon-right">Découvrir Greenpeace</a>
                </div>

                <div class="field-wrap">
                    <a href="/?s=" class="" class="btn secondary-btn icon-search open-search-form pull-right">Trouver la réponse à ma question</a>
                </div>
            </div>

        </div>

        <div class="field-wrap">
            <label for="message">Vous n’avez pas trouvé ? Posez-nous votre question ici.
            </label>
        </div>

    </div>




    <div id="benevolat-part" class="form-part hidden">
        <div class="important">
            <p>
                Vous souhaitez rejoindre les militants et bénévoles de Greenpeace pour participer à nos campagnes&nbsp;? Quelle belle idée&nbsp;! C'est <strong class="mark" >tous ensemble</strong> que nous pourrons obtenir les avancées nécessaires à un monde meilleur&nbsp;!
            </p>
            <p>
                <a href="/agir/benevolat/" class="more-link icon-right pull-right">Devenir bénévole à nos côtés&nbsp;!</a>
            </p>
        </div>
    </div>



    <div id="stage-part" class="form-part hidden">
        <div class="important">
            <p>
                La pédagogie et l’échange sont au coeur de notre approche en matière de stage. Dans cette optique, nous privilégions les stages de six mois. Nos stagiaires perçoivent une indemnité de stage supérieure à l’obligation légale.
            </p>
            <p>
                <a href="/offres-d-emploi" class="more-link icon-right pull-right">Découvrir toutes nos offres</a>
            </p>


            <p>
                S’il n’y a pas d’offre de stage en ligne, c’est que nous ne pourrons pas vous accueillir dans de bonnes conditions. N’hésitez pas à créer une alerte dans votre Espace Candidat !
            </p>
            <p>
                <a href="https://greenpeace.mycv.tech/" class="more-link icon-right pull-right">Créer mon Espace Candidat</a>
            </p>
        </div>
    </div>



    <div id="autre-part" class="form-part hidden">
        <div class="important">
            <p>
                Vous souhaitez d’autres informations sur votre adhésion&nbsp;? Vous désirez apporter une modification à votre soutien à Greenpeace ? Adressez-nous vos demandes et questions. Nous avons hâte de vous lire&nbsp;!
            </p>
        </div>

        <div class="field-wrap">
            <p>
                Dites-nous tout.
            </p>
        </div>
    </div>


    <div id="shop-part" class="form-part hidden">
        <div class="important">
            <p>
                Nous n’avons plus de boutique en ligne et ne vendons pas de produits dérivés. Vous avez compris, on ne pousse pas à la consommation...&nbsp;;-)
            </p>
        </div>
    </div>



    <div id="iban-part" class="form-part hidden">
        <div class="important">
            <p>
                Pour continuer à prendre part aux campagnes de Greenpeace après avoir changé de compte bancaire, rien de plus simple&nbsp;! Il vous suffit de nous indiquer vos nouvelles coordonnées bancaires juste ici&nbsp;:
            </p>
        </div>
        <div class="field-row two-in-row">
            <div class="field-wrap">
                <label for="beneficiaire">Nom bénéficiaire*</label>
                <input type="text" value="" name="beneficiaire" id="beneficiaire" data-rule-required="true" data-msg="Veuillez entrer un nom" data-hj-masked/>
            </div>
        </div>

        <div class="field-row">
            <div class="field-wrap">
                <label for="">Numéro IBAN*</label>
                <div class="iban-wrap">
                    <input type="text" name="iban" id="iban" data-rule-required="true" data-mask="SS00 AAAA AAAA AAAA AAAA AAAA AAAZ ZZZZ ZZ" data-rule-maxlength="42" data-rule-minlength="33" data-msg-required="Votre IBAN est obligatoire" data-msg-minlength="Votre IBAN est incorrect (trop court)" data-msg-maxlength="Votre IBAN est incorrect (trop long)" data-mask-translation="iban" data-rule-iban="true"  data-hj-masked>

                </div>
            </div>
        </div>

        <div class="field-row two-in-row">
            <div class="field-wrap">
                <label for="bic">Numéro BIC*</label>
                <input type="text" name="bic" id="bic" data-rule-required="true" data-mask="SSSSSSAAZZZ" data-mask-translation="bic" data-rule-maxlength="11" data-rule-minlength="8" data-msg="BIC invalide"  data-hj-masked/>
            </div>
        </div>
    </div>







    <div id="coords-part" class="form-part hidden" >
        <div class="important">
            <p>
                Vous renseignez vos anciennes et nouvelles coordonnées et nous nous occupons du reste&nbsp;! Soyez précis pour une prise en compte plus rapide.
            </p>
        </div>


        <div class="field-row">
            <p><strong>Adresse postale</strong></p>
        </div>

        <div class="field-row two-in-row">
            <div class="field-wrap">
                <label for="adresse"><strong>Ancienne </strong> adresse</label>
                <textarea name="old_adresse" id="old_adresse" data-hj-masked></textarea>
            </div>

            <div class="field-wrap">
                <label for="adresse"><strong>Nouvelle </strong> adresse</label>
                <textarea name="new_adresse" id="new_adresse" data-hj-masked></textarea>
            </div>
        </div>




        <div class="field-row">
            <p><strong>Coordonnées téléphoniques</strong></p>
        </div>



        <div class="field-row two-in-row">
            <div class="field-wrap">
                <label for="old_phone"><strong>Ancien </strong>numéro fixe</label>
                <input type="text" value="" name="old_phone" id="old_phone" data-rule-phone="true" data-msg-phone="Merci d'indiquer un numéro de téléphone valide, en France" data-mask="F000000000" data-mask-translation="phone"  data-hj-masked/>
            </div>

            <div class="field-wrap">
                <label for="new_phone"><strong>Nouveau </strong>numéro fixe</label>
                <input type="text" value="" name="new_phone" id="new_phone" data-rule-phone="true" data-msg-phone="Merci d'indiquer un numéro de téléphone valide, en France" data-mask="F000000000" data-mask-translation="phone"  data-hj-masked/>
            </div>
        </div>


        <div class="field-row two-in-row">
            <div class="field-wrap">
                <label for="old_phone_mobile"><strong>Ancien </strong>numéro mobile</label>
                <input type="text" value="" name="old_phone_mobile" id="old_phone_mobile" data-rule-phone="true" data-msg-phone="Merci d'indiquer un numéro de téléphone valide, en France" data-mask="FM00000000" data-mask-translation="phone"  data-hj-masked/>
            </div>

            <div class="field-wrap">
                <label for="new_phone_mobile"><strong>Nouveau </strong>numéro mobile</label>
                <input type="text" value="" name="new_phone_mobile" id="new_phone_mobile" data-rule-phone="true" data-msg-phone="Merci d'indiquer un numéro de téléphone valide, en France" data-mask="FM00000000" data-mask-translation="phone"  data-hj-masked/>
            </div>
        </div>



        <div class="field-row">
            <p><strong>Adresse e-mail</strong></p>
        </div>


        <div class="field-row two-in-row">
            <div class="field-wrap">
                <label for="old_email"><strong>Ancienne </strong>adresse e-mail</label>
                <input type="email" id="old_email" name="old_email" maxlength="80" data-rule-email="true" data-msg-mail="Veuillez entrer une adresse email correcte"  data-hj-masked />
            </div>

            <div class="field-wrap">
                <label for="old_email"><strong>Nouvelle </strong>adresse e-mail</label>
                <input type="email" id="new_email" name="new_email" maxlength="80" data-rule-email="true" data-msg-mail="Veuillez entrer une adresse email correcte"  data-hj-masked />
            </div>
        </div>

    </div>





    <div id="message-part" class="form-part hidden">
        <div class="field-wrap">
            <textarea name="message" id="message" data-hj-masked></textarea>
        </div>

    </div>



    <div id="nl-part" class="form-part hidden">
        <div class="field-wrap">
            <div class="field-wrap radio-box">
                <p class="label">Je souhaite m'inscrire à la newsletter de Greenpeace France</p>
                <div class="radio-wrap">
                    <input type="radio" name="newsletter" value="1" id="nlc-yes" checked/>
                    <label for="nlc-yes">Oui</label>
                </div>
                <div class="radio-wrap">
                    <input type="radio" name="newsletter" value="0" id="nlc-no" />
                    <label for="nlc-no">Pas maintenant</label>
                </div>
            </div>

        </div>
    </div>


    <input type="hidden" name="type" id="type" value=""/>
    <input type="hidden" name="00Nb000000AS58Q" id="subtype" value=""/>
    <input type="hidden" name="00Nb000000AS5EE" value="1"/>
    <input type="hidden" name="00Nb000000AS5EO" value="Entrant"/>
    <input type="hidden" name="origin" value="Web"/>
    <input type="hidden" name="external" value="1"/>
    <input type="hidden" id="description" name="description" value=""/>
    <input type="hidden" id="reason" name="00Nb000000AS5Ag" value=""/>
    <input type="hidden" id="name" name="name" value=""/>

                    </div>
                </div>
            </div>
        </div>
    </article>
{% endblock %}
